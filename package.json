{
  "name": "fantasy-edge-app",
  "version": "0.1.5",
  "private": false,
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/dafyaman/fantasy-edge.git"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint",

    "slm:preflight": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/check_preflight.ps1",
    "slm:smoke": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/slm.ps1 smoke",
    "slm:export-smoke": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/slm.ps1 export-smoke",
    "slm:smoke-summary": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/slm.ps1 smoke-summary",
    "slm:smoke-summary-schema": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/slm.ps1 smoke-summary-schema",
    "slm:fixtures": "pwsh -NoProfile -NonInteractive -ExecutionPolicy Bypass -File slm-tool/scripts/slm.ps1 fixtures",

    "electron:dev": "set NEXT_DEV_URL=http://localhost:3000&& electron .",
    "electron:build": "npm run build",
    "prep:electron-app": "node scripts/prep-electron-app.cjs",
    "dist:win": "npm run electron:build && npm run prep:electron-app && electron-builder --win nsis",
    "dist": "npm run electron:build && npm run prep:electron-app && electron-builder"
  },
  "dependencies": {
    "next": "15.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",

    "electron-updater": "^6.3.9",
    "get-port": "^7.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^31.7.6",
    "electron-builder": "^24.13.3",
    "asar": "3.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.fantasyedge.app",
    "productName": "Fantasy Edge",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "dafyaman",
        "repo": "fantasy-edge"
      }
    ],
    "directories": {
      "app": "electron-app",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "afterPack": "scripts/afterPack.cjs",
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
